<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
   <%= f.label(:fname, "First Name") %>
   <%= f.text_field(:fname) %>
   <%= f.label(:lname, "Last Name") %>
   <%= f.text_field(:lname) %>
   <%= f.label(:email, "Email Address") %>
   <%= f.text_field(:email) %>
   <%= f.label(:password, "Password") %>
   <%= f.password_field(:password) %>
   <%= f.submit(:submit) %>
		
<% end %>

